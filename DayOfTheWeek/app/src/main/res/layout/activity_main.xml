<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.firasaltayeb.dayoftheweek.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Days Of Week"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".3"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mondayBtn"
        android:onClick="mondayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_primary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tuesdayBtn"
        android:onClick="tuesdayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_secondary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wednesdayBtn"
        android:onClick="wednesdayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_primary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thursdayBtn"
        android:onClick="thursdayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_secondary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fridayBtn"
        android:onClick="fridayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_primary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saturdayBtn"
        android:onClick="saturdayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_secondary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sundayBtn"
        android:onClick="sundayBtnClicked"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".09"
        android:background="@drawable/rounded_button_primary"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />
</LinearLayout>
