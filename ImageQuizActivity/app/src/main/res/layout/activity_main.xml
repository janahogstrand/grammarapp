<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teerachel.imagequizactivity.MainActivity"
    android:background="@drawable/cloud">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="60px"
        android:id="@+id/ques"
        android:background="#00595858"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50px" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainImage"
        android:src="@drawable/train"
        android:background="#00595858"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:layout_alignBottom="@+id/planeImage"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planeImage"
        android:src="@drawable/aeroplane"
        android:background="#00595858"
        android:layout_marginTop="46dp"
        android:paddingRight="30px"
        android:paddingBottom="20px"
        android:layout_below="@+id/ques"
        android:layout_alignStart="@+id/carImage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carImage"
        android:src="@drawable/car"
        android:background="#00595858"
        android:layout_alignTop="@+id/imageButton28"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20px"
        android:paddingRight="30px" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton28"
        android:src="@drawable/bus"
        android:background="#00595858"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:layout_below="@+id/trainImage"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bikeImage"
        android:src="@drawable/cycle"
        android:background="#00595858"
        android:layout_below="@+id/imageButton28"
        android:layout_alignParentStart="true"
        android:paddingLeft="30px" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shipImage"
        android:src="@drawable/ship"
        android:background="#00595858"
        android:layout_below="@+id/carImage"
        android:layout_alignParentEnd="true"
        android:paddingRight="30px" />

</RelativeLayout>
