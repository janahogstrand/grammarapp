<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teerachel.imagequizactivity.BarcoActivity"
    android:foreground="#40172d67"
    android:background="@drawable/cloud">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainImage"
            android:src="@drawable/train"
            android:layout_above="@+id/busImage"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="39dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/planeImage"
            android:src="@drawable/aeroplane"
            android:layout_alignTop="@+id/trainImage"
            android:layout_alignStart="@+id/carImage" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carImage"
            android:src="@drawable/car"
            android:layout_alignTop="@+id/busImage"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busImage"
            android:src="@drawable/bus"
            android:layout_marginBottom="39dp"
            android:layout_above="@+id/bikeImage"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bikeImage"
            android:src="@drawable/bikeclick"
            android:layout_alignTop="@+id/shipImage"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:id="@+id/barcoText"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/trainImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipImage"
            android:src="@drawable/ship"
            android:layout_marginBottom="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
