<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teerachel.imagequizactivity.MainActivity"
    android:background="@drawable/cloud"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="60dp"
        android:id="@+id/ques"
        android:background="#00595858"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="40dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train"
            android:id="@+id/trainImage"
            android:background="@drawable/train"
            android:textSize="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/planeImage"
            android:background="@drawable/aeroplane"
            android:paddingBottom="20dp"
            android:text="Plane"
            android:layout_below="@+id/ques"
            android:layout_alignStart="@+id/carImage"
            android:paddingLeft="30dp"
            android:textSize="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busImage"
            android:background="@drawable/bus"
            android:text="bus"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:layout_below="@+id/trainImage"
            android:layout_alignParentStart="true"
            android:textSize="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carImage"
            android:background="@drawable/car"
            android:text="car"
            android:layout_alignTop="@+id/busImage"
            android:layout_alignParentEnd="true"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:paddingLeft="40dp"
            android:textSize="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bikeImage"
            android:background="@drawable/cycle"
            android:text="bike"
            android:layout_below="@+id/busImage"
            android:layout_alignParentStart="true"
            android:paddingLeft="50dp"
            android:textSize="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipImage"
            android:background="@drawable/ship"
            android:text="Train"
            android:layout_below="@+id/carImage"
            android:layout_alignParentEnd="true"
            android:paddingRight="30dp"
            android:paddingLeft="40dp"
            android:textSize="0dp" />
    </LinearLayout>

</LinearLayout>
