    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".com.grammar.trocket.main.voiceRecorder.VoiceRecorderMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FragmentTab3" />
        <activity android:name=".FragmentTab2" />
        <activity android:name=".FragmentTab1" />
        <activity android:name=".com.grammar.trocket.resources.BigView" android:label="Item viewer"/>
        <activity android:name=".com.grammar.trocket.resources.Festivals" android:label="Festivals"/>
        <activity android:name=".com.grammar.trocket.resources.Times" android:label="Times"/>
    </application>

</manifest>
