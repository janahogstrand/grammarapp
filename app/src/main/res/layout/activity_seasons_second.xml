<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.grammar.trocket.grammar.com.grammar.trocket.resources.SecondActivity"
    android:background="@drawable/summer"
    android:scaleType="fitXY">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/option4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:minWidth="400px"
        android:background="#ffa024"
        android:textColor="#fff"
        android:onClick="playAudio"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/option5"
        android:layout_marginTop="40dp"
        android:minWidth="400px"
        android:background="#ffa024"
        android:textColor="#fff"
        android:layout_below="@+id/option4"
        android:layout_centerHorizontal="true"
        android:onClick="playAudio"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/option6"
        android:layout_marginTop="43dp"
        android:minWidth="400px"
        android:background="#ffa024"
        android:textColor="#fff"
        android:layout_below="@+id/option5"
        android:layout_alignStart="@+id/option5"
        android:onClick="playAudio"/>
</RelativeLayout>


