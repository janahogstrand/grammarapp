<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/cv"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:id="@+id/festival_picture"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/festival_picture"
        android:maxLines="6"
        android:padding="8dp"
        android:text="Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase"
        android:textColor="#222"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase Super long spanish phrase"
        android:textColor="#666"
        android:textSize="14sp" />

</LinearLayout>
</android.support.v7.widget.CardView>