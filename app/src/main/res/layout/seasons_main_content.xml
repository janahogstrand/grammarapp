<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/seasons_main_app_bar"
    tools:context=".SeasonsMain">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/pageTitle"
        android:textColor="#130707"
        android:paddingTop="20px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub Title"
        android:id="@+id/subTitle"
        android:textColor="#595959"
        android:textAlignment="center"
        android:layout_below="@+id/pageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub Title 2"
        android:id="@+id/engSubtitle"
        android:layout_marginTop="20dp"
        android:textColor="#09b2e1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/subTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:id="@+id/summerBtn"
        android:textColor="#ffffff"
        android:background="#fa941f"
        android:minHeight="220px"
        android:minWidth="270px"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/springBtn"
        android:layout_marginLeft="15dp"
        android:onClick="moveToNewActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/springBtn"
        android:textColor="#ffffff"
        android:background="#6ad050"
        android:minHeight="220px"
        android:minWidth="270px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:onClick="moveToNewActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/autumnBtn"
        android:textColor="#ffffff"
        android:background="#fa1f23"
        android:minHeight="220px"
        android:minWidth="270px"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/springBtn"
        android:layout_toStartOf="@+id/summerBtn"
        android:layout_marginTop="20dp"
        android:onClick="moveToNewActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/winterBtn"
        android:textColor="#ffffff"
        android:background="#54a4f4"
        android:minHeight="220px"
        android:minWidth="270px"
        android:layout_alignTop="@+id/autumnBtn"
        android:layout_alignStart="@+id/summerBtn"
        android:onClick="moveToNewActivity"/>

</RelativeLayout>
