<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teerachel.imagequizactivity.Image_Quiz_Main"
    android:orientation="vertical"
    android:weightSum="1">
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/questionBtn"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".1"
        android:textSize="50dp" />
    ​
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/topLayer"
        android:layout_weight=".3"
        android:weightSum="1">
        ​
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4">
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/firstView"
                android:onClick="checkResult"
                android:tag="firstView"
                android:layout_gravity="left|center_horizontal"
                android:layout_alignParentEnd="true" />

            ​
        </RelativeLayout>
        ​
        ​

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4" >
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/secondView"
                android:onClick="checkResult"
                android:tag="secondView"
                android:layout_gravity="center_horizontal|right"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>
        ​
        ​
    </LinearLayout>
    ​

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/midLayer"
        android:layout_weight=".3"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">
        ​
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/thirdView"
                android:onClick="checkResult"
                android:tag="thirdView"
                android:layout_weight="0.4"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        ​
        ​
        ​

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/fourthView"
                android:onClick="checkResult"
                android:tag="fourthView"
                android:layout_weight=".4"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>
        ​
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bottomLayer"
        android:layout_weight=".3"
        android:weightSum="1"
        android:transitionGroup="true">
        ​

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/fifthView"
                android:onClick="checkResult"
                android:tag="fifthView"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            ​
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/sixthView"
                android:onClick="checkResult"
                android:tag="sixthView"/>

        </RelativeLayout>

        ​
        ​
        ​

        ​
    </LinearLayout>

    ​
</LinearLayout>