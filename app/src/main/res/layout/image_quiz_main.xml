<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teerachel.imagequizactivity.Image_Quiz_Main"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/questionBtn"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.7"
        android:textSize="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/topLayer"
        android:layout_weight="0.7"
        android:weightSum=".9">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/firstView"
            android:onClick="checkResult"
            android:tag="firstView" />

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/secondView"
            android:onClick="checkResult"
            android:tag="secondView"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/midLayer"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/thirdView"
            android:onClick="checkResult"
            android:tag="thirdView"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/fourthView"
            android:onClick="checkResult"
            android:tag="fourthView"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bottomLayer"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/fifthView"
            android:onClick="checkResult"
            android:tag="fifthView"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/sixthView"
            android:onClick="checkResult"
            android:tag="sixthView"/>

    </LinearLayout>

</LinearLayout>
